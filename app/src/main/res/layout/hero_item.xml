<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/default_margin_padding">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/hero_item_imv_hero_icon_size"
        android:layout_height="@dimen/hero_item_imv_hero_icon_size"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_margin_padding"
        android:textColor="@color/gold"
        android:textSize="@dimen/hero_item_txt_size"
        android:textStyle="bold"
        tools:text="TextView" />

</LinearLayout>